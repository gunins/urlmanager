{
    "parent": "$(parentJson)/library.json",
    "defaultPhase": "package",
    "properties": {
        "title": "Router",
        "docs": "http://cifwk-oss.lmera.ericsson.se:8081/nexus/content/sites/tor/router/$(version)/",
        "description": "Router gives easy way to create and manage url routes in your application.",
        "package": "router",
        "name": "Router",
        "version": "0.0.4",
        "skeleton": "2.0.16",
        "skeletonType": "library",
        "routerDir": "src/coreRouter/",
        "routerRegionDir": "src/router/"
    },
    "phases": {
        "tsc": {
            "execute": {
                "command": "node",
                "attributes": [
                    "node_modules/typescript/bin/tsc.js",
                    "$(routerDir)IMapHandler.ts",
                    "$(routerDir)IMatchBinding.ts",
                    "$(routerDir)IRouteHandler.ts",
                    "$(routerDir)MatchBinder.ts",
                    "$(routerDir)MatchBinding.ts",
                    "$(routerDir)Router.ts",
                    "$(routerRegionDir)ICommand.ts",
                    "$(routerRegionDir)RegMatchBinder.ts",
                    "$(routerRegionDir)RegMatchBinding.ts",
                    "$(routerRegionDir)RegRouter.ts",
                    "--module amd",
                    "--target es3",
                    "--sourceMap"
                ]
            }
        },
        "add-extend-dev": {
            "concat": {
                "files": [
                    "extend.js",
                    "target/optimized/router/Router.js"
                ],
                "target": "target/package/router/Router.js"
            }
        },
        "add-extend-prod": {
            "concat": {
                "files": [
                    "extend.js",
                    "target/optimized-prod/router/Router.js"
                ],
                "target": "target/package/router/$(majorVersion)/Router.js"
            }
        },
        "add-extend": {
            "depends": [
                "add-extend-dev",
                "add-extend-prod"
            ]
        },
        "package": {
            "depends": [
                "tsc",
                "clean",
                "compile",
                "add-extend",
                "compress"
            ]
        }
    },
    "dependencies": {
        "jscore": "1.1.19"
    }
}